<script>
	var _hidediv = null;
	var _removecolor = null;
	function showdiv(id, imgid) {
  	  if(_hidediv)
    	    _hidediv();
		if(_removecolor)
			_removecolor();
    	var div = document.getElementById(id);
    	div.style.display = 'block';
    	_hidediv = function () { div.style.display = 'none'; };
		var imgdiv = document.getElementById(imgid);
		imgdiv.className += ' color-img';
		_removecolor = function () { imgdiv.className = ''; imgdiv.className = 'team-member' };
	}
	</script>


